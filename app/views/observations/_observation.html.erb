<div id="<%= dom_id observation %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= observation.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Observed:</strong>
    <%= observation.observed.in_time_zone.strftime("%B %d, %Y at %I:%M %p") %>
  </div>
</div>
