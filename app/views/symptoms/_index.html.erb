
<table class="border-collapse border border-gray-300">
  <thead>
    <tr>
      <th class="text-left border border-gray-300 px-4 py-2"></th>
      <th class="text-left border border-gray-300 px-4 py-2">Name</th>
      <th class="text-left border border-gray-300 px-4 py-2">Observations</th>
      <th class="text-left border border-gray-300 px-4 py-2">Timestamp</th>
      <th class="font-normal text-left border border-gray-300 px-4 py-2"><%= link_to "add", new_symptom_path, class: "text-green-600 hover:underline" %></th>
    </tr>
  </thead>
  <tbody>
    <% @symptoms.each do |symptom| %>
      <tr>
        <td class="border border-gray-300 px-4 py-2">
          <%= link_to "edit", edit_symptom_path(symptom.id), class: "hover:underline" %>
        </td>
        <td class="border border-gray-300 px-4 py-2">
          <%= symptom.name %>
        </td>
        <td class="border border-gray-300 px-4 py-2">
          <%= symptom.observation %>
        </td>
        <td class="border border-gray-300 px-4 py-2">
        </td>
        <td class="border border-gray-300 px-4 py-2">
          <%= button_to "delete", symptom_path(symptom), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
