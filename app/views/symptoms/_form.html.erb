<%= form_with model: symptom, class: "space-y-6 max-w-md mx-auto" do |form| %>
  <% if form.object.errors.any? %>
    <p class="error text-red-600"><%= form.object.errors.full_messages.first %></p>
  <% end %>

  <div>
    <%= form.label :name, class: "block mb-2" %>
    <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2"%>
  </div>

  <div>
    <%= form.label :observation, class: "block mb-2" %>
    <%= form.text_area :observation, rows: 4, class: "w-full border border-gray-300 rounded px-3 py-2"%>
  </div>

  <div>
    <%= form.label "From", class: "block mb-2" %>
    <%= form.datetime_select :observed_from, class: "w-full border border-gray-300 rounded px-3 py-2"%>
  </div>

  <div>
    <%= form.label "To", class: "block mb-2" %>
    <%= form.datetime_select :observed_to, class: "w-full border border-gray-300 rounded px-3 py-2"%>
  </div>

  <div class="flex items-center gap-4">
    <%= link_to "Cancel", root_path, class: "text-red-600 border border-red-600 px-3 py-2 rounded hover:underline" %>
    <%= form.submit symptom.new_record? ? "Create" : "Save", class: "text-blue-600 border border-blue-600 rounded px-3 py-2 hover:underline" %>
  </div>
<% end %>